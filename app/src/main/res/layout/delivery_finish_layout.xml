<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView21"
        android:layout_gravity="center"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_height="36dp"
        android:layout_width="36dp"
        android:layout_marginTop="8dp"
        android:id="@+id/guillotine_hamburger"
        android:src="@drawable/quit_sign"
        android:padding="10dp"
        android:background="@drawable/white_circle_back"
        android:layout_gravity="right"
        android:layout_marginRight="12dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@drawable/black_border"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:gravity="center"
        android:textColor="#212121"
        android:text="ЗАКАЗАТЬ"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText35"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@drawable/black_border"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:gravity="center"
        android:textColor="#212121"
        android:text="ВЫБРАТЬ КАРТУ"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="62dp"
        android:visibility="gone" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:id="@+id/imageView8"
        android:layout_gravity="center_horizontal|top"
        android:background="@drawable/mini_logo"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText3f"
        android:layout_gravity="center_horizontal|top"
        android:background="@drawable/black_border"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center"
        android:textColor="#212121"
        android:text="Выберите адрес"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginTop="76dp"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView26"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="120dp"
        android:textColor="#212121"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:id="@+id/imageView20"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginLeft="102dp"
        android:src="@drawable/check"
        android:visibility="gone"
        android:layout_marginBottom="72dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#212121"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="174dp"></FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#212121"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="150dp"></FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="188dp"
        android:layout_marginBottom="204dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Москва Россия"
        android:id="@+id/textView40"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="118dp"
        android:textColor="#212121"
        android:textSize="16sp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:gravity="fill_horizontal"
        android:visibility="gone"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/other_string"
        android:id="@+id/textView41"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="138dp"
        android:textColor="#212121"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="АДРЕС ДОСТАВКИ"
        android:id="@+id/textView42"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="86dp"
        android:textColor="#212121"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="До бесплатной доставки осталось 90Р"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="160dp"
        android:textSize="12sp"
        android:textColor="#212121" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Доставка - 200р"
        android:id="@+id/textView18"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="174dp"
        android:textColor="#212121"
        android:textSize="14sp" />

</FrameLayout>