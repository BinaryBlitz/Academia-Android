<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView21"
        android:layout_gravity="center"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_height="36dp"
        android:layout_width="36dp"
        android:layout_marginTop="8dp"
        android:id="@+id/guillotine_hamburger"
        android:src="@drawable/quit_sign"
        android:padding="10dp"
        android:background="@drawable/white_circle_back"
        android:layout_gravity="right"
        android:layout_marginRight="12dp" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:id="@+id/imageView8"
        android:layout_gravity="center_horizontal|top"
        android:background="@drawable/mini_logo"
        android:scaleType="fitCenter" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="296dp">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView35"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="66dp"
        android:textColor="#212121"
        android:textSize="18sp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/comment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ваша оценка заказа:"
            android:id="@+id/textView49"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="180dp"
            android:textColor="#212121"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/imageView231"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="134dp"
            android:layout_marginLeft="48dp"
            android:src="@drawable/star" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/imageView232"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="134dp"
            android:src="@drawable/star" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/imageView233"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="134dp"
            android:src="@drawable/star"
            android:layout_marginRight="48dp" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/imageView234"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="134dp"
            android:layout_marginLeft="96dp"
            android:src="@drawable/star" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/imageView23"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="134dp"
            android:src="@drawable/star"
            android:layout_marginRight="96dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="62dp"
            android:id="@+id/editText7"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_marginBottom="68dp"
            android:background="#ffffff"
            android:hint="Какие у Вас пожелания?"
            android:textSize="14sp"
            android:gravity="left|top"
            android:padding="8dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ОТПРАВИТЬ"
            android:id="@+id/textView7"
            android:layout_weight="1.0"
            android:textAllCaps="true"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="#1e1e1e"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView62"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:maxLines="2"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#212121" />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView50"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="210dp"
        android:textIsSelectable="false"
        android:textSize="18sp"
        android:textColor="#212121"
        android:textStyle="bold" />
</FrameLayout>