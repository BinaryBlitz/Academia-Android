<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/menu_layout"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:contentInsetStart="0dp">
        <ImageView
            android:layout_width="56dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal|top"
            android:background="@drawable/mini_logo"
            android:scaleType="fitCenter" />
        <ImageView
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:id="@+id/guillotine_hamburger"
            android:src="@drawable/ic_quit"
            android:padding="10dp"
            android:background="@drawable/white_circle_back" />

    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="92dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:id="@+id/menu_list"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/additional_menu"
                android:layout_marginTop="32dp"
                android:id="@+id/additional_menu"
                android:layout_gravity="center_horizontal|top"
                android:textColor="#ffffff"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center" />

            <View
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_margin="32dp"
                android:layout_height="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/profile"
                android:id="@+id/menu_profile"
                android:layout_gravity="center_horizontal|top"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/orders"
                android:id="@+id/menu_orders"
                android:layout_gravity="center_horizontal|top"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/help"
                android:layout_marginTop="32dp"
                android:id="@+id/menu_help"
                android:layout_gravity="center_horizontal|top"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>