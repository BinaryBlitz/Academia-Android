<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/loading_indicator"
        android:layout_height="match_parent">
        <com.github.rahatarmanahmed.cpv.CircularProgressView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cpv_color="#212121"
            android:layout_gravity="center"
            app:cpv_animAutostart="true"
            android:layout_marginBottom="32dp"
            app:cpv_indeterminate="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="@string/loading_menu"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:textColor="#212121"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_default"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/content_hamburger"
        android:src="@drawable/ic_menu"
        android:padding="10dp"
        android:background="@drawable/white_circle_back"
        android:layout_marginTop="8dp" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:id="@+id/imageView81"
        android:layout_gravity="center_horizontal|top"
        android:background="@drawable/mini_logo"
        android:scaleType="fitCenter"
        android:layout_marginTop="4dp" />

    <ImageView
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/next_btn"
        android:src="@drawable/ic_cart"
        android:padding="8dp"
        android:background="@drawable/white_circle_back"
        android:layout_gravity="end|top"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView19"
        android:layout_gravity="end|top"
        android:textColor="#ffffff"
        android:layout_marginTop="2dp"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/red_circle"
        android:gravity="center" />

    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView19fd"
        android:layout_gravity="top"
        android:textColor="#ffffff"
        android:layout_marginTop="2dp"
        android:background="@drawable/red_circle"
        android:gravity="center"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp" />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicator_default"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="68dp" />

    <com.academiaexpress.CircularReveal.widget.RevealFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <include layout="@layout/fragment_menu" />
    </com.academiaexpress.CircularReveal.widget.RevealFrameLayout>

</FrameLayout>