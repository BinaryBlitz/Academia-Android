<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/background"
        android:layout_gravity="center"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/content_hamburger"
        android:src="@drawable/ic_menu"
        android:padding="10dp"
        android:background="@drawable/white_circle_back"
        android:layout_marginTop="8dp" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal|top"
        android:background="@drawable/mini_logo"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/help_text"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="66dp"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/time_text"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="106dp"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="42dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/make_preorder"
        android:id="@+id/preorder_btn"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="#ffffff"
        android:background="@drawable/main_btn_border_background"
        android:layout_marginBottom="56dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="18sp" />

    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/orders_indicator"
        android:layout_gravity="top"
        android:textColor="#ffffff"
        android:layout_marginTop="2dp"
        android:background="@drawable/red_circle"
        android:gravity="center"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp" />

    <com.academiaexpress.CircularReveal.widget.RevealFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <include layout="@layout/fragment_menu" />
    </com.academiaexpress.CircularReveal.widget.RevealFrameLayout>
</FrameLayout>