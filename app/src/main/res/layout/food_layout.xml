<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/root"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_default"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_marginLeft="12dp"
        android:id="@+id/content_hamburger"
        android:src="@drawable/menu_icon"
        android:padding="10dp"
        android:background="@drawable/white_circle_back"
        android:layout_marginTop="8dp" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:id="@+id/imageView81"
        android:layout_gravity="center_horizontal|top"
        android:background="@drawable/mini_logo"
        android:scaleType="fitCenter"
        android:layout_marginTop="4dp" />

    <ImageView
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_marginRight="12dp"
        android:id="@+id/next_btn"
        android:src="@drawable/buy_ic"
        android:padding="8dp"
        android:background="@drawable/white_circle_back"
        android:layout_gravity="right|top"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2"
        android:id="@+id/textView19"
        android:layout_gravity="right|top"
        android:textColor="#ffffff"
        android:layout_marginTop="2dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/red_circle"
        android:gravity="center" />

    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2"
        android:id="@+id/textView19fd"
        android:layout_gravity="top"
        android:textColor="#ffffff"
        android:layout_marginTop="2dp"
        android:background="@drawable/red_circle"
        android:gravity="center"
        android:layout_marginLeft="36dp" />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicator_default"
        android:layout_centerInParent="true"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="68dp" />

    <com.academiaexpress.CircularReveal.widget.RevealFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <include layout="@layout/main_menu_layout" />
    </com.academiaexpress.CircularReveal.widget.RevealFrameLayout>

</FrameLayout>