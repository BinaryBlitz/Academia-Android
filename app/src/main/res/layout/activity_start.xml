<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/background"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/content_hamburger"
        android:src="@drawable/ic_menu"
        android:padding="10dp"
        android:background="@drawable/white_circle_back"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="42dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/start"
        android:id="@+id/start"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="#ffffff"
        android:background="@drawable/main_btn_border_background"
        android:layout_marginBottom="56dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp" />

    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/orders_indicator"
        android:layout_gravity="top"
        android:textColor="#ffffff"
        android:layout_marginTop="2dp"
        android:background="@drawable/red_circle"
        android:gravity="center"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp" />

    <com.academiaexpress.CircularReveal.widget.RevealFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/fragment_menu" />
    </com.academiaexpress.CircularReveal.widget.RevealFrameLayout>
</FrameLayout>