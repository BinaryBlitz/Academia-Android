<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    android:id="@+id/main">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView21"
        android:layout_gravity="center"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_height="36dp"
        android:layout_width="36dp"
        android:layout_marginTop="8dp"
        android:id="@+id/guillotine_hamburger"
        android:src="@drawable/quit_sign"
        android:padding="10dp"
        android:background="@drawable/white_circle_back"
        android:layout_gravity="right"
        android:layout_marginRight="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="76dp"
        android:layout_marginBottom="76dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:id="@+id/editText2"
                android:layout_gravity="right|top"
                android:layout_weight="1.0"
                android:background="@drawable/black_border"
                android:layout_marginRight="16dp"
                android:hint="Имя"
                android:inputType="textCapWords"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColorHint="#727272"
                android:textSize="16sp"
                android:textColor="#212121" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:id="@+id/editText"
                android:layout_gravity="left|top"
                android:layout_weight="1.0"
                android:background="@drawable/black_border"
                android:hint="Фамилия"
                android:inputType="textCapWords"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:textColorHint="#727272"
                android:textSize="16sp"
                android:textColor="#212121" />
        </LinearLayout>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_gravity="left|top"
            android:background="@drawable/black_border"
            android:layout_marginBottom="16dp"
            android:hint="E-mail"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColorHint="#727272"
            android:textSize="16sp"
            android:textColor="#212121" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Сохранить профиль"
            android:id="@+id/textView7"
            android:textAllCaps="true"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="#1e1e1e"
            android:layout_marginTop="12dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:id="@+id/imageView8"
        android:layout_gravity="center_horizontal|top"
        android:background="@drawable/mini_logo"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ВЫЙТИ ИЗ ПРОФИЛЯ"
        android:id="@+id/textViewdsb7"
        android:textAllCaps="true"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="#1e1e1e"
        android:layout_marginBottom="56dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp" />
</FrameLayout>